{
  "compilerOptions": {
    "module": "Node16",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "strict": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "Node16",
    "outDir": "dist",
    "declaration": true,
    "rootDir": "."
  },
  "include": [
    "src/**/*",
    "sync.mts"
  ]
}
